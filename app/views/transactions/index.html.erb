<h1>Transactions</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.order("transaction_date ASC").each do |t| %>
      <tr data-id='transaction-<%= t.id %>'>
        <td><%= t.transaction_date %></td>
        <td><%= t.transaction_type %></td>
        <td>$<%= t.amount_cents.to_f/ 100 %></td>
        <td><%= t.description %></td>
        <td>
          <em>Budgets: </em>
          <% if t.budgets.empty? %>
            none
          <% else %>
            <%= t.budgets.map(&:name).join(",") %>
          <% end %>
        </td>
        <td><%= link_to '', t, class: "fa fa-trash-o trash", 'data-id': 'transaction-' + t.id.to_s, 'aria-hidden': 'true', method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">4</a></li>
    <li class="page-item"><a class="page-link" href="#">5</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>

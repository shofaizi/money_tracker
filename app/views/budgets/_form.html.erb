<%= simple_form_for(@budget) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :period %>
    <%= f.input :goal_amount_cents %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= simple_form_for(@budget) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :period, collection: ['Monthly', 'Weekly'], selected: 'Monthly', as: :select %>
    <%= f.input :goal_amount, label: 'Goal Amount', placeholder: '$0.00' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

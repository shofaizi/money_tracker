<div id='header'>
  <h1>Budgets</h1>
</div>

<br>
<div><%= link_to 'New Budget', new_budget_path, class:'btn btn-success'%></div>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Period</th>
      <th>Goal Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr data-id='budget-<%= budget.id %>'>
        <td><%= budget.name %></td>
        <td><%= budget.description %></td>
        <td><%= budget.period %></td>
        <td><%= humanized_money_with_symbol(budget.goal_amount) %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <!-- <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <td><%= link_to '', budget, class: "fa fa-trash-o trash", 'data-id': 'budget-' + budget.id.to_s, 'aria-hidden': 'true', method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">4</a></li>
    <li class="page-item"><a class="page-link" href="#">5</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>

<!DOCTYPE html>
<html>
  <head>
    <title>MoneyProject</title>
    <%# include_gon %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application'%>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-6 col-lg-3 col-xl-2" id='navbar'>
          <div class='navbar'>
            <ul>
              <li><%= link_to 'Main Page', root_path %></li><hr />
              <li><%= link_to 'My Budget', budgets_path %></li><hr />
              <li><%= link_to 'Spendings', spending_index_path %></li><hr />
              <li><%= link_to 'Overview',  overview_path %></li><hr />
              <li><%= link_to 'Transactions', transactions_path %></li><hr />
              <% if current_user.present? %>
                <li><%= link_to 'Settings', edit_user_path(current_user) %></li><hr />
              <% end %>
            </ul>
          </div>
        </div>

        <div class="col-md-9 col-xl-10 col-sm-8 col-lg-9" id="container">
          <div>
            <% if notice || alert %>
              <div class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable" role="alert">
                <%= notice || alert %>
              </div>
            <% end %>
          </div>

          <div>
            <ul id="status" class='nav navbar-nav'>
            <% if user_signed_in? %>
              <li><%= button_to 'Sign out', sessions_path, method: :delete, class: 'btn btn-default navbar-btn' %></li>
            <% else %>
              <li><%= link_to 'Sign up', new_user_path %></li>
              <li><%= link_to 'Sign In', new_session_path %></li>
              <li><%= link_to "Sign in with Twitter", sign_in_with_twitter_path %></li>
            <% end %>
            </ul>
          </div>

          <div id="contents">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>

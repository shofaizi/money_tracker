<!DOCTYPE html>
<html>
  <head>
    <title>MoneyProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 col-sm-4">
          <div class='navbar'>
            <ul>
              <li><%= link_to 'Main Page', root_path %></li>
              <li><%= link_to 'My Budget', budgets_path %></li>
              <li><%= link_to 'Spendings', spending_index_path %></li>
              <li><%= link_to 'Overview',  overview_path %></li>
              <li><%= link_to 'Transactions', transactions_path %></li>
              <% if current_user.present? %>
                <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="col-md-8 col-sm-8">
          <ul class='nav navbar-nav navbar-right'>
          <% if user_signed_in? %>
            <li><%= button_to 'Sign out', sessions_path, method: :delete, class: 'btn btn-default navbar-btn' %></li>
          <% else %>
            <li><%= link_to 'Sign up', new_user_path %></li>
            <li><%= link_to 'Sign In', new_session_path %></li>
          <% end %>
          </ul>
          <%= yield %>
        </div>
        <div>
        <% if notice || alert %>
          <div class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable" role="alert"></div>
          <%= notice || alert %>
        <% end %>
      </div>
    </div>

  </body>
</html>

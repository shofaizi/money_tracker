<!DOCTYPE html>
<html>
  <head>
    <title>MoneyProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='navbar'>
      <ul>
        <li><%= link_to 'Main Page', root_path %></li>
        <li><%= link_to 'My Budget', budgets_path %></li>
        <li><%= link_to 'Spendings', spendings_path %></li>
        <% if current_user.present? %>
          <li><%= link_to 'Overview',  user_transactions_path(current_user) %></li>
          <li><%= link_to 'Transactions', user_transactions_path(current_user) %></li>
          <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
        <% end %>
      </ul>
    </div>

    <ul class='nav navbar-nav navbar-right'>
      <% if user_signed_in? %>
        <li><p class="navbar-text">Hello <%= current_user.first_name.capitalize %></p></li>
        <li><%= button_to 'Sign out', sessions_path, method: :delete, class: 'btn btn-default navbar-btn' %></li>
      <% else %>
        <li><%= link_to 'Sign up', new_user_path %></li>
        <li><%= link_to 'Sign In', new_session_path %></li>
      <% end %>
    </ul>

    <% if notice || alert %>
      <div class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable" role="alert">
      <%= notice || alert %>
    <% end %>


    <%= yield %>
  </body>
</html>

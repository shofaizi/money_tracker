<h1 align="center">Sign In</h1>
<div class='row'>
  <div class="col-xs-2 col-md-2 col-sm-2"></div>
  <div class='col-xs-8 col-md-8 col-sm-8'>
    <%= form_tag sessions_path do %>
      <div class='form-group'>
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class:'form-control' %>
      </div>
    <div class='form-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class:'form-control' %>
    </div>
      <%= submit_tag 'Sign In', class:'btn btn-default' %>
    <% end %>
    <div class="row">
      <div class="col-xs-1 col-md-1 col-sm-1"></div>
      <div class="col-xs-10 col-md-10 col-sm-10">
        <div class='connect-twitter'>
          <i class="fa fa-twitter" aria-hidden="true"></i>
          <%= link_to "Sign in with Twitter", sign_in_with_twitter_path %>
        </div>
        <div class="toggle-form">
          <div class='text btn btn-outline-info'><i class="fa fa-user-plus" aria-hidden="true"></i> Not a User yet?</div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= @user.errors.full_messages.join(', ') %>

<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group form-group-lg">
  <%= f.label :first_name, class: "col-sm-4" %>
  <%= f.text_field :first_name, class: "col-sm-6" %>
</div>

<div class="form-group form-group-lg" style="clear: left">
  <%= f.label :last_name, class: "col-sm-4" %>
  <%= f.text_field :last_name, class: "col-sm-6" %>
</div>

<div class="form-group form-group-lg" style="clear: left">
  <%= f.label :email, class: "col-sm-4" %>
  <%= f.email_field :email, class: "col-sm-6" %>
</div>

<div class="form-group form-group-lg" style="clear: left">
  <%= f.label :password, class: "col-sm-4" %>
  <%= f.password_field :password, class: "col-sm-6" %>
</div>

<div class="form-group form-group-lg" style="clear: left">
  <%= f.label :password_confirmation, class: "col-sm-4" %>
  <%= f.password_field :password_confirmation, class: "col-sm-6" %>
</div>
<div class="form-group form-group-lg" style="clear: left;">
  <div class="col-sm-4"></div>
  <%= submit_tag 'Update User', class:'btn btn-success' %>
</div>
<% end %>

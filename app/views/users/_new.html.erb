<h1 align='center' id="user-new-header">Sign Up</h1>
<div class='row'>
  <div class='col-xs-2 col-md-2 col-sm-2'></div>
  <div class='col-xs-8 col-md-8 col-sm-8'>
    <% @user = User.new %>
    <%= @user.errors.full_messages.join(', ') %>
      <%= form_for @user do |f| %>
      <div class='form-group'>
        <%= f.label :first_name, class: 'signup-label' %>
        <%= f.text_field :first_name, class:'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :last_name, class: 'signup-label' %>
        <%= f.text_field :last_name, class:'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :email, class: 'signup-label' %>
        <%= f.email_field :email, class:'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :password, class: 'signup-label' %>
        <%= f.password_field :password, class:'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation, class: 'signup-label' %>
        <%= f.password_field :password_confirmation, class:'form-control' %>
      </div>
      <%= submit_tag 'Sign Up', class:'btn btn-default' %>
    <% end %>


    <div class="toggle-form">
      <div class='already-user'>Already a User?
        <i class="fa fa-sign-in" aria-hidden="true"></i>
      </div>
    </div>
  </div>
</div>
